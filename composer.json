{
    "name": "wouterj/fred",
    "description": "A very simple iteration based task runner",
    "license": "BSD",
    "authors": [
        {
            "name": "Wouter J",
            "email": "wouter@wouterj.nl"
        }
    ],

    "require": {
        "php": ">=5.3.3",
        "symfony/console": "2.*",
        "symfony/finder": "2.*",
        "symfony/process": "2.*"
    },
    "require-dev": {
        "phpspec/phpspec": "~2.1",
        "behat/behat": "~3.0",
        "phpunit/phpunit": "4.*"
    },

    "autoload": {
        "psr-4": {
            "WouterJ\\Fred\\": "src",
            "WouterJ\\Fred\\Extension\\": "ext"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
